#include<bits/stdc++.h>
#include<algorithm>
#include<vector>
using namespace std;

vector<int> sortingWithComparator(vector<int> a, bool flag){
    // your code  goes here
    //int n=a.size();
    if(flag){
        sort(a.begin(),a.end());
     
    }
    else{
       sort(a.begin(),a.end());
       reverse(a.begin(),a.end());
      
    }
 return a;
}
